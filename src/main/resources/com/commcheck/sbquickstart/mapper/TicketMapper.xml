<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.commcheck.sbquickstart.mapper.TicketMapper">
    <select id="list" resultType="com.commcheck.sbquickstart.pojo.Ticket">
        select * from ticket
        <where>
            <if test="state != null">
                state = #{state}
            </if>

            <if test="type ! = null">
                type = #{type}
            </if>

            and ownerId = #{ownerId}

        </where>
    </select>
</mapper>